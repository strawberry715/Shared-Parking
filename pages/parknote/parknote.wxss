/* pages/parknote/parknote.wxss */
page{
  background-color: #eee;
}
.parknoteContainer{
  display: flex;
  flex-direction: column;
}
.message{
  width: 90%;
  display: flex;
  flex-direction: row;
  border-bottom: 2rpx solid #aaa;
  background-color: #fff;
  margin:20rpx auto;
  border-radius:10rpx;
}
.message image{
  width:120rpx;
  height:120rpx;
  margin:auto auto;
}
.textContainer{
  display: flex;
  flex-direction: column;
}
.textContainer text{
  margin: 10rpx 20rpx;
  font-size:32rpx;
  text-overflow:ellipsis;
  word-break:break-all;
}
.right image{
  width:50rpx;
  height:50rpx;
  float: right;
  margin-right: 50%;
}

