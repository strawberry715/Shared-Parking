/* pages/choosetime/choosetime.wxss */
page{
  background-color: #eee;
}
.container{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.title{
  font-size: 60rpx;
  font-weight: bold;
  text-indent: 22rpx;
  line-height: 100rpx;
  width: 100%;
  background-color: white;
}
.content{
  width: 100%;
  padding-top: 10rpx;
  padding-left: 1.5%;
  background-color: white;
}
.row{
  display: flex;
  flex-direction: row;
}
.invest1{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 98%;
  margin-left: 1%;
}
.btn{
  font-size: 28rpx;
  height:90rpx;
  line-height: 90rpx;
  text-align: center;
}
.btnContainer{
  width:30%;
  text-align: center;
  margin-bottom: 30rpx;
  margin-right: 20rpx;
}
.btnSelected{
  background-color: #1E90FF;
  color: white;
}
.detail{
  width: 100%;
  height: 90rpx;
  background-color: white;
  margin-top: 30rpx;
  line-height: 90rpx;
  padding-left: 20rpx;
}
.confirm{
  width: 95%;
  height: 90rpx;
  line-height: 90rpx;
  margin-top: 40rpx;
  margin-left: 2.5%;
  background-color: #1E90FF;
  border-radius: 45rpx;
  color: white;
}
