.content{
  width: 92%;
  background-color: white;
  margin-left: 4%;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  border-radius: 20rpx;
}
.content_inner{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #eee;
}
image{
  width: 26rpx;
  height: 26rpx;
  float: right;
  margin-right: 20rpx;
  margin-top: 37rpx;
}
.img{
  float: left;
  height: 45rpx;
  width: 45rpx;
  margin: 30rpx 10rpx 0 30rpx;
}
.license{
  float: right;
  margin-right: 30rpx;
  opacity: 0.5;
}
.head{
  width:30%;
  height:40%;
  margin-right: 35%;
  border-radius: 50%;
  margin-top:40rpx;
}
.headtext{
  margin-left: 37%;
  margin-top: 10rpx;
}