/* pages/mine/mine.wxss */
page{
  background-color: #eee;
}
.container{
  display: flex;
  flex-direction: column;
}
.top{
  width: 100%;
  height: 400rpx;
  background-color:#1E90FF; 
}
.center{
  width: 100%;
  height: 130rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  box-shadow:0px 3px 5px 0px rgb(187, 185, 185);
}
.money{
  width: 50%;
  height: 100rpx;
  /* background-color: red; */
  margin-top: 15rpx;
  text-align: center;
}
.coins{
  color: #1E90FF;
  font-size: 40rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
}
.coins_b{
  color: rgb(253,76,1);
}
.text_top{
  margin: 0 auto;
}
.img_top{
  float: left;
  width: 36rpx;
  height: 36rpx;
  margin: 0rpx -95rpx 0 115rpx;
}
.extra{
  border-right: 3rpx solid #eee;
}
